<?xml version="1.0"?>
<MVR>
<Server>
  <Port type="string">3490</Port>
  <Host>localhost</Host>
  <NumClients type="int">1</NumClients>
  <NumProcesses type="int">1</NumProcesses>
  <CreateServer type="int">1</CreateServer>
</Server>

<VRPlugins>
    <MinVRDefaultPlugins>
        <Names type="stringarray">MinVR_GLFW@MinVR_OpenGL@MinVR_Threading</Names>
    </MinVRDefaultPlugins>
</VRPlugins>

<VRDisplayDevices>
	<Desktop>
		<displayType type="string">glfw_display</displayType>
		<xOffset type="double">0</xOffset>
	    <yOffset type="double">0</yOffset>
	    <width type="double">800</width>
    	<height type="double">400</height>
    	<SideBySideStereo>
    		<LeftWall>
    			<viewport>
	    			<xOffset type="double">0</xOffset>
				    <yOffset type="double">0</yOffset>
	    			<width type="double">0.5</width>
    				<height type="double">0.5</height>
    				<userPercent type="int">1</height>
    			</viewport>
    			<tile>
					<topLeft type="doublearray">-0.5@0.5@0.0</topLeft>
					<topRight type="doublearray">0.5@0.5@0.0</topRight>
					<bottomLeft type="doublearray">-0.5@-0.5@0.0</bottomLeft>
					<bottomRight type="doublearray">0.5@-0.5@0.0</bottomRight>
					<nearClip type="double">0.01</nearClip>
					<farClip type="double">100.0</farClip>
				</tile>
    		</LeftWall>
		</SideBySideStereo>
	</Desktop>
</VRDisplayDevices>

</MVR>
